{% extends 'base.html.twig' %}

{% block title %}
    Event Details {{ event.id|default('') }}
{% endblock %}

{% block body %}
    <h1>Event Details {{ event.id|default('') }}</h1>
    {% if event is defined %}
        <dl class="dl-horizontal">
            <dt>ID</dt>
            <dd>{{ event.id }}</dd>
            <dt>Created At</dt>
            <dd>{{ event.createdAt|format_date('long') }}</dd>
            <dt>Updated At</dt>
            <dd>{{ event.updatedAt|format_date('long') }}</dd>
            <dt>Title</dt>
            <dd>{{ event.title }}</dd>
            <dt>Category</dt>
            <dd>{{ event.category.title }}</dd>
            <dt>Event Date</dt>
            <dd>{{ event.eventDate|date('Y/m/d H:i') }}</dd>
        </dl>
        <p>
            <a href="{{ path('event_index') }}" title="Back to list">
                Back to list
            </a>
        </p>
    {% else %}
        <p>
            Event not found.
        </p>
    {% endif %}
{% endblock %}