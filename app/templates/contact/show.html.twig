{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_contact_details'|trans({'%id%': contact.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_contact_details'|trans({'%id%': contact.id|default('')}) }}</h1>
    {% if contact is defined %}
        <dl class="dl-horizontal">
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ contact.id }}</dd>
            <dt>{{ 'label_name'|trans }}</dt>
            <dd>{{ contact.name }}</dd>
            <dt>{{ 'label_surname'|trans }}</dt>
            <dd>{{ contact.surname }}</dd>
            <dt>{{ 'label_phone'|trans }}</dt>
            <dd>{{ contact.phone }}</dd>
            <dt>{{ 'label_address'|trans }}</dt>
            <dd>{{ contact.address }}</dd>
            <dt>{{ 'label_created_at'|trans }}</dt>
            <dd>{{ contact.createdAt|date('Y/m/d H:i') }}</dd>
            <dt>{{ 'label_updated_at'|trans }}</dt>
            <dd>{{ contact.updatedAt|date('Y/m/d H:i') }}</dd>
        </dl>
        <p>
            <a href="{{ url('contact_edit', {id: contact.id}) }}" title="{{ 'action_edit'|trans }}">
                {{ 'action_edit'|trans }}
            </a>
            <a href="{{ url('contact_delete', {id: contact.id}) }}" title="{{ 'action.delete'|trans }}">
                {{ 'action.delete'|trans }}
            </a>
            <a href="{{ url('contact_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}
