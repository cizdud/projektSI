{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_event_list'|trans }}
{% endblock %}

{% block body %}
    <div class="title_of_page">
        <h1>{{ 'title_event_list'|trans }}</h1>
    </div>
    <h3>{{ 'actual_event_list'|trans }}</h3>
    {% if pagination is defined and pagination.items|length %}
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label_title'|trans, 'event.title') }}</th>
                <th>{{ 'label_category'|trans }}</th>
                <th>{{ 'label.event_date'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for event in pagination.items %}
                {% if event.eventDate < 'now' and event.eventDate > 'now -7 days' %}
                    <tr>
                        <td>{{ event.title }}</td>
                        <td>{{ event.category.title }}</td>
                        <td>{{ event.eventDate|date('Y/m/d H:i') }}</td>                    </tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
    {#    future events#}
    <h3>{{ 'future_event_list'|trans }}</h3>
    {% if pagination is defined and pagination.items|length %}
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label_title'|trans, 'event.title') }}</th>
                <th>{{ 'label_category'|trans }}</th>
                <th>{{ 'label.event_date'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for event in pagination.items %}
                {% if event.eventDate > 'now' %}
                    <tr>
                        <td>{{ event.title }}</td>
                        <td>{{ event.category.title }}</td>
                        <td>{{ event.eventDate|date('Y/m/d H:i') }}</td>                    </tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}
