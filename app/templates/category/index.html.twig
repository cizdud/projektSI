{% extends 'base.html.twig' %}

{% block title %}
    Category List
{% endblock %}

{% block body %}
    <h1>Category List</h1>
    <div class="row mb-3">
        <div class="col">
            <a href="{{ path('category_create') }}" class="btn btn-primary">Add new</a>
        </div>
    </div>
    {% if pagination is defined and pagination.items|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'ID', 'category.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Created At', 'category.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Updated At', 'category.updatedAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Title', 'category.title') }}</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in pagination.items %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.createdAt|date('Y/m/d') }}</td>
                    <td>{{ category.updatedAt|date('Y/m/d') }}</td>
                    <td>{{ category.title }}</td>
                    <td>
                        <a href="{{ path('category_show', {id: category.id}) }}" title="Show" class="btn btn-info">Show</a>
                        <a href="{{ path('category_edit', {id: category.id}) }}" title="Edit" class="btn btn-warning">Edit</a>
                        <a href="{{ path('category_delete', {id: category.id}) }}" title="Delete" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        {% include 'default/_single_alert_message.html.twig' with {
            type: 'warning',
            message: 'No categories found.'
        } %}
    {% endif %}
{% endblock %}